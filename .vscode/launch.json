{    
    "version": "0.2.0",
    "configurations": [
        {
            "name": "JLink Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceRoot}/build/${workspaceFolderBasename}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "device": "STM32F103C8",
            "runToEntryPoint": "main",
            "preLaunchTask" : "Build",
            "showDevDebugOutput": "parsed",
            "servertype": "jlink",
            "svdFile" : "${workspaceRoot}/STM32F103.svd",
            "swoConfig":
            {
                "enabled": true,
                // "cpuFrequency": 16000000,
                "swoFrequency": 4000000,
                "source": "probe",
                "decoders":
                [
                    {
                        "label": "ITM port 0 output",
                        "type": "console",
                        "port": 0,
                        "showOnStartup": true,
                        "encoding": "ascii"
                    }
                ]
            }
        },
        {
            "name": "JLink Attach",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceRoot}/build/${workspaceFolderBasename}.elf",
            "request": "attach",
            "type": "cortex-debug",
            "device": "STM32F103C8",
            "runToEntryPoint": "main",
            "preLaunchTask" : "Build",
            "showDevDebugOutput": "parsed",
            "servertype": "jlink",
            "svdFile" : "${workspaceRoot}/STM32F103.svd",
            "swoConfig":
            {
                "enabled": true,
                // "cpuFrequency": 16000000,
                "swoFrequency": 4000000,
                "source": "probe",
                "decoders":
                [
                    {
                        "label": "ITM port 0 output",
                        "type": "console",
                        "port": 0,
                        "showOnStartup": true,
                        "encoding": "ascii"
                    }
                ]
            }
        },
        {
            "name": "ST-Link Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceRoot}/build/${workspaceFolderBasename}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "stutil",
            "preLaunchTask" : "Build",
            "preRestartCommands" : [ "load", "enable breakpoint", "monitor reset" ],
            "showDevDebugOutput" : "none",
            "svdFile" : "${workspaceRoot}/STM32F103.svd"
        },
        {
            "name": "ST-Link Attach",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceRoot}/build/${workspaceFolderBasename}.elf",
            "request": "attach",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "stutil",
            "preLaunchTask" : "Build",
            "preRestartCommands" : [ "load", "enable breakpoint", "monitor reset" ],
            "showDevDebugOutput" : "none",
            "svdFile" : "${workspaceRoot}/STM32F103.svd"
        }
    ]
}